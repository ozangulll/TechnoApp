@model ProductModel
@{
    ViewData["Title"] = "CreateProduct";
    
}

<h1 class="fade-in form-title" style="color: white;">Create Product</h1>
<hr class="fade-in" />
   <form asp-controller="Admin" asp-action="CreateProduct" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-md-8">

            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="form-group row">
                <label asp-for="Name" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Name" value="@Model.Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ImageUrl" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input type="hidden" name="ImageUrl" value="@Model.ImageUrl" />
                    <input type="file" name="file" value="" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <textarea  asp-for="Description" class="form-control">
                        @Model.Description
                    </textarea>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Price" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Price" value="@Model.Price" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-primary">Create Product</button>
                </div>
            </div>

        </div>
        <div class="col-md-4">
        @foreach (var item in (List<Category>)ViewBag.Categories)
{
    <div class="custom-control custom-checkbox">
        <input type="checkbox"
               name="categoryIds"
               value="@item.Id"
               class="custom-control-input"
               id="category@(item.Id)">
        <label class="custom-control-label" for="category@(item.Id)">@item.Name</label>
    </div>
}


        </div>
    </div>

</form>

        </div>