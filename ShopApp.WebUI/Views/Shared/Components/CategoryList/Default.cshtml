<style>
    .list-group-item {
        position: relative;
        overflow: hidden;
        background-color: transparent; /* Arka planı şeffaf yapın */
    }
    .list-group-item::before {
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background-color: transparent; /* Arka planı şeffaf yapın */
        transition: left 0.3s ease;
        z-index: -1;
    }
    .list-group-item:hover::before {
        left: 0;
    }
</style>

@model CategoryListViewModel

<ul class="list-group">
    @foreach (var item in Model.Categories)
    {
        <a asp-controller="Shop" asp-action="List" asp-route-category="@item.Name.ToLower()"
           class="list-group-item list-group-item-action @(Model.SelectedCategory == item.Name.ToLower() ? "active" : "")">
            @item.Name
        </a>
    }
</ul>
